<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.StackPage"
             Title="Stack Page">
    <StackLayout VerticalOptions="Center">
        <Label Text="Texto 1" FontSize="Large" />
        <Label Text="Texto 2" FontSize="Medium" />
        <Label Text="Texto 3" FontSize="Small" />
        <Button Text="Ir a FlexLayout" Command="{Binding GoToFlexPageCommand}" />
    </StackLayout>
</ContentPage>
