<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.MainPage"
             Title="Main Page">
    <StackLayout VerticalOptions="Center">
        <Button Text="Ir a GridLayout" Command="{Binding GoToGridPageCommand}" />
        <Button Text="Ir a StackLayout" Command="{Binding GoToStackPageCommand}" />
        <Button Text="Ir a FlexLayout" Command="{Binding GoToFlexPageCommand}" />
        <Button Text="Ir a AbsoluteLayout" Command="{Binding GoToAbsolutePageCommand}" />
    </StackLayout>
</ContentPage>
